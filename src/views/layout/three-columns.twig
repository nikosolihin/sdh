<div class="row row--of-3">
  {# Don't create column div if there's no content #}
  {% if left %}
  <div class="column column-left">
    {% if leftCallout %}
      <div class="Callout Callout--column">
    {% endif %}
    {% block left %}{% endblock %}
    {% if leftCallout %}
      </div>
    {% endif %}
  </div>
  {% endif %}

  {% if mid %}
  <div class="column column-mid">
    {% if midCallout %}
      <div class="Callout Callout--column">
    {% endif %}
    {% block mid %}{% endblock %}
    {% if midCallout %}
      </div>
    {% endif %}
  </div>
  {% endif %}

  {% if right %}
  <div class="column column-right">
    {% if rightCallout %}
      <div class="Callout Callout--column">
    {% endif %}
    {% block right %}{% endblock %}
    {% if rightCallout %}
      </div>
    {% endif %}
  </div>
  {% endif %}
</div>
