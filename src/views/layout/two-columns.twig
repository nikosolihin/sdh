{% if callout %}
  {# Callout two columns #}
  <div class="Callout">
    <div class="Callout-content">
{% else %}
  {# Normal two columns #}
  <div class="row row--of-2">
{% endif %}

    {% if left %}
      {% if not callout %}<div class="column column-left">{% endif %}
        {% block left %}{% endblock %}
      {% if not callout %}</div>{% endif %}
    {% endif %}

  {% if callout %}
    </div>
    <div class="Callout-image lazyload" data-bgset="{{callout_image|serveImage['xs']}}">
  {% else %}

    {% if right %}
      {% if not callout %}<div class="column column-right">{% endif %}
        {% block right %}{% endblock %}
      {% if not callout %}</div>{% endif %}
    {% endif %}

  {% endif %}

  {% if callout %}
    </div>
  {% endif %}

{% if callout %}
    </div>
  </div>
{% else %}
  </div>
{% endif %}
