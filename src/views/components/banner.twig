{% set image = acf.image|serveImage %}
{% set size = acf.banner_size %}
{% set alignment = acf.alignment %}

<section class="{{'Banner'|modifiers("#{size}, #{alignment}")}} lazyload" data-bgset="{{image.xxl}} [(min-width: {{xxl}})] | {{image.xl}} [(min-width: {{xl}})] | {{image.lg}} [(min-width: {{lg}})] | {{image.md}} [(min-width: {{md}})] | {{image.sm}} [(min-width: {{sm}})] | {{image.xs}}" style="{% if alignment == "custom" %}background-position: center {{acf.custom_alignment}}%;{% endif %}">
  <div class="Banner-container container">
    {% if acf.teaser %}
      <h2 class="Banner-copy white light right">
        <span class="h6 block caps bold white spaced right">{{breadcrumb|first.title}}</span>{{acf.teaser}}
      </h2>
    {% endif %}
  </div>
</section>
