{% if data.internal %}
  {% set source = data.post_type %}
  {% set style = data.style %}
  {% if data.mode == 'automatic' %}
    {% set type = data.post_type %}
  {% else %}
    {% set type = data.manual_posts|first.post_type %}
  {% endif %}

  {# Do logic in PHP #}
  {% set list = populatelist(data) %}

  <ul class="{{'Feed'|modifiers("#{style}, #{type}")}}">
    {% for post in list %}
      <li class="Feed-item">
        {% include 'components/feed-' ~ type ~ '.twig' with data %}
      </li>
    {% endfor %}
  </ul>
{% else %}
  <ul class="Feed-social juicer-feed" data-feed-id="sekolah-dian-harapan" data-columns="3" data-per="10" data-style="user" data-overlay="false">
    <h3 class="Intro-heading Intro-heading--center center h3 light navy">{{__('Stay Connected', 'sdh')}}</h3>
  </ul>
{% endif %}
