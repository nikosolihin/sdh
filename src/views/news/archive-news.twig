{% extends "base.twig" %}

{% block content %}

<div class="SinglePage container">
  <div class="SinglePage-content content-body">
    <div class="Intro">
      <h1 class="Intro-heading h2 light navy">{{options.news_title|title}}</h1>
      <p class="Intro-teaser light faint">{{options.news_teaser}}</p>
    </div>

    {# ----------------- News Archive ----------------- #}
    <div class="ArchiveNews" data-component="">
      <h2 class="h3 normal navy">{{__('News from Our Campuses', 'sdh')}}</h2>

      <div class="ArchiveNews-control">
        <div class="ArchiveNews-filter">
          <span class="h7 medium caps spaced faint">Date:</span>
          <div class="Select">
      			<select class="h6 medium navy">
      				<option value="desc">{{__('Latest', 'sdh')}}</option>
      				<option value="asc">{{__('Oldest', 'sdh')}}</option>
      			</select>
            <svg aria-hidden="true" role="presentation" title="">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#down"></use>
            </svg>
      		</div>
        </div>
        <div class="ArchiveNews-filter">
          <span class="h7 medium caps spaced faint">Campus:</span>
          <div class="Select">
      			<select class="h6 medium navy">
      				<option value="">{{__('All', 'sdh')}}</option>
      				<option value="">{{__('Manado', 'sdh')}}</option>
      				<option value="">{{__('Palembang', 'sdh')}}</option>
      				<option value="">{{__('This is a long one', 'sdh')}}</option>
      			</select>
            <svg aria-hidden="true" role="presentation" title="">
              <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#down"></use>
            </svg>
      		</div>
        </div>
      </div>

      <div class="ArchiveNews-content">
        <div class="Card">
          <a href="" class="Card-link">
            <div class="Card-imageFrame">
              <div class="Card-imageOverlay"></div>
              <div class="Card-image lazyload" data-bgset="http://www.greenpeace.org/usa/wp-content/uploads/2015/05/GP0STOLRT_Web_size-566x450-c-default.jpg">
              </div>
            </div>
            <div class="Card-body">
              <span class="h7 medium caps spaced faint">Holland Village</span>
              <div class="Card-title h4 bold">Historian and journalist Jelani Cobb speaks on February 15</div>
              <span class="h6 medium faint">{{__('Posted', 'sdh')}} Dec 26, 2016</span>
            </div>
          </a>
          <div class="Card-social">
            <span class="h7 medium faint caps spaced">Share</span>
            <div class="flex-wrapper">
              <a href="" class="Card-share icon">
                <svg aria-hidden="true" role="presentation" title="">
                  <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#facebook"></use>
                </svg>
              </a>
              <a href="" class="Card-share icon">
                <svg aria-hidden="true" role="presentation" title="">
                  <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#twitter"></use>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <div class="Card">
          <a href="" class="Card-link">
            <div class="Card-imageFrame">
              <div class="Card-imageOverlay"></div>
              <div class="Card-image lazyload" data-bgset="https://www.lakesideschool.org/data/news/thumbs/213.768.jpg">
              </div>
            </div>
            <div class="Card-body">
              <span class="h7 medium caps spaced faint">Palembang</span>
              <div class="Card-title h4 bold">Important AIM survey runs in February</div>
              <span class="h6 medium faint">{{__('Posted', 'sdh')}} Dec 26, 2016</span>
            </div>
          </a>
          <div class="Card-social">
            <span class="h7 medium faint caps spaced">Share</span>
            <div class="flex-wrapper">
              <a href="" class="Card-share icon">
                <svg aria-hidden="true" role="presentation" title="">
