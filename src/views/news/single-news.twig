{% extends "base.twig" %}
{% block content %}

<div class="{{'SinglePage'|modifiers("#{sidebar}")}} container">
  <div class="SinglePage-share Share Share--horizontal">
    {% include 'components/social-share.twig' %}
  </div>
  <div class="SinglePage-content">
    <div class="Intro Intro--withMeta">
      <div class="Intro-breadcrumb">
        {% include 'components/breadcrumb.twig' %}
      </div>
      <h1 class="Intro-heading light navy">{{post.title}}</h1>
      <div class="Intro-meta">
        <span class="h7 caps spaced medium faint">{{campus}}</span>
        <span class="Footer-dot">‚óè</span>
        <span class="h7 caps spaced medium faint">{{__('Posted on', 'sdh')}} {{post.date|date('j M, Y')}}</span>
      </div>
      {% if acf.teaser %}
        <p class="Intro-teaser light">{{acf.teaser}}</p>
      {% endif %}
      {% include 'components/image.twig' with {'data': {'figure': image, 'crop': false}} %}
    </div>
    {% include 'layout/base.twig' %}
  </div>
  <div class="SinglePage-sidebar Sidebar">
    <div class="Sidebar-section Sidebar-section--plain">
      <div class="Spacer"></div>
      <div class="Spacer"></div>
      <div class="Spacer"></div>
      <h3 class="h7 navy spaced medium caps">{{__('Recent News', 'sdh')}}</h3>
      {% include 'components/feed.twig' with {data: news, empty: __('There are currently no news at this school.', 'sdh')} %}
      <a href="{{site.url}}/news/?utf8=%E2%9C%93&date=desc&pg=1&campus={{campus_slug}}" class="Button Button--gray Button--block Button--withMargin">{{__('More From', 'sdh')}} {{campus}}</a>
      <div class="Spacer"></div>
    </div>
    {% if sidebar_sections %}
      {% include 'layout/sidebar-base.twig' %}
    {% endif %}
  </div>
</div>

{% endblock %}
