{% include 'modules/search.twig' %}

{% if locale == 'id_ID' %}
  {% set language = __('Indonesian', 'sdh') %}
{% elseif locale == 'en_US' %}
  {% set language = __('English', 'sdh') %}
{% endif %}

<header class="Header">

<nav class="Header-secondary" role="navigation">
  <div class="flex-wrapper">
    <div class="Header-languages">
      <svg aria-hidden="true" role="presentation" title="Select Language">
        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#globe"></use>
      </svg>
      <span class="h7 medium white">{{language|title}}</span>
      <svg aria-hidden="true" role="presentation" title="Select Language">
        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#down"></use>
      </svg>
      <div class="Header-languagesDropdown">
        {% if 'en' in languages.list and locale != 'en_US' %}
          <a href="{{languages.en}}" class="h7 medium white">{{__('English', 'sdh')}}</a>
        {% endif %}
        {% if 'id' in languages.list and locale != 'id_ID' %}
          <a href="{{languages.id}}" class="h7 medium white">{{__('Indonesian', 'sdh')}}</a>
        {% endif %}
      </div>
    </div>
    <div class="Header-slogan h7 medium">{{slogan}}</div>
  </div>

  <div class="flex-wrapper">
    <div class="flex-wrapper">
      <a href="{{site.url}}/news" class="Header-quicklinks h7 medium yellow">
        <svg aria-hidden="true" role="presentation" title="See our school news">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#news"></use>
        </svg>School News
      </a>
      <a href="{{site.url}}/events" class="Header-quicklinks h7 medium yellow">
        <svg aria-hidden="true" role="presentation" title="See our events">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#calendar"></use>
        </svg>Event Calendar
      </a>
    </div>
    <ul class="Header-secondaryList List List--inline">
      {% for item in secondary_menu %}
        <li><a href="{{item.link}}" class="Header-secondaryLink h7 caps medium white">{{item.title}}</a></li>
      {% endfor %}
    </ul>
    <a href="" class="Header-search" data-component="search">
      <svg aria-hidden="true" role="presentation" title="Search SDH Website">
        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#search"></use>
      </svg>
    </a>
  </div>
</nav>

<div class="Header-nav">
  <div class="flex-wrap">
    <a class="Header-logo" href="{{site.url}}">
      <div class="Header-seal">
        <svg aria-hidden="true" role="presentation" title="SDH Seal Logo">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#seal"></use>
        </svg>
      </div>
      <div class="Header-textLogo">
        <svg aria-hidden="true" role="presentation" title="SDH Text Logo">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#logo-text"></use>
        </svg>
      </div>
    </a>
  </div>
  <nav class="Header-primary" role="navigation">
    <ul class="Header-primaryList List List--inline">
      {% for item in primary_menu %}
        {% if item.link in current_url %}
          {% set is_active = ' is-Active' %}
        {% else %}
          {% set is_active = '' %}
        {% endif %}
        <li><a href="{{item.link}}" class="Header-primaryLink h5 medium {{is_active}}">{{item.title}}</a></li>
      {% endfor %}
      {# Always display Our Campuses link #}
      <li class="Header-ourCampuses">
        <div class="Header-ourCampusesLink Header-primaryLink h5 medium">{{__('Our Campuses', 'sdh')}}</div>
        <svg aria-hidden="true" role="presentation" title="">
          <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#down"></use>
        </svg>
        <div class="Header-ourCampusesDropdown">
          {% for campus in campuses %}
            <a href="{{campus.link}}" class="h5 medium">{{campus.name|title}}</a>
          {% endfor %}
        </div>
      </li>
    </ul>
  </nav>
</div>

</header>
