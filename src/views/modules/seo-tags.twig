{# https://moz.com/blog/seo-cheat-sheet #}
<link href="{{current_url}}" rel="canonical" />

{# Annotate alternate language & region versions of content #}
<link rel="alternate" hreflang="en" href="{{languages.en}}" />
<link rel="alternate" hreflang="x-default" href="{{languages.en}}" />
<link rel="alternate" hreflang="id" href="{{languages.id}}" />

{% if acf.image and acf.image is iterable %}
  {% set square = acf.image|serveSquareImage %}
{% else %}
  {% set square = fallback.square %}
{% endif %}

{# Google Custom Search Thumbnail #}
<meta name="thumbnail" content="{{square.xs}}" />
