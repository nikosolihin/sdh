<div class="Search">
  <form class="Search-form " role="form" action="{{site.url}}/search" accept-charset="UTF-8" method="get">
    <h5 class="h7 bold orange spaced caps">{{__('Type to Search Our Website', 'sdh')}}</h5>
    <input class="Search-input h3 normal navy" id="Search-input" type="text" name="q" autocomplete="off" placeholder="{{__('What can we help you find?', 'sdh')}}">
    <div class="Search-icon">
      <svg aria-hidden="true" role="presentation" title="">
        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#search"></use>
      </svg>
    </div>
  </form>

  <div class="Search-popular">
    <h5 class="h7 bold orange spaced caps">{{__('Popular Pages', 'sdh')}}</h5>
    <div class="Search-popularLinks">
      {% for item in popular %}
        <a href="{{item.link}}" class="Search-popularLink light white">{{item.title}}</a>
      {% endfor %}
    </div>
  </div>
</div>

<div class="Search-close">
  <svg aria-hidden="true" role="presentation" title="">
    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#close"></use>
  </svg>
</div>
